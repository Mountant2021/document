<templates xml:space="preserve">
    <t t-name="module_owl.TodoTask" owl="1">
        <div class="todo-task-container">
            <div class="row m-2">
                <div class="col">
                    <table class="table table-striped table-hover border">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Color</th>
                                <th scope="col">Description</th>
                                <th scope="col">Done</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="state.taskList" t-as="task" t-key="task.id">
                                <td>
                                    <span t-esc="task.name"/>
                                </td>
                                <td>
                                    <input type="color" class="form-control form-control-color" id="exampleColorInput" t-att-value="task.color" title="Choose your color" />
                                </td>
                                <td>
                                    <span t-esc="task.description"/>
                                </td>
                                <td>
                                    <input class="form-check-input" type="checkbox" t-att-id="task.id" t-att-checked="task.is_done" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</templates>